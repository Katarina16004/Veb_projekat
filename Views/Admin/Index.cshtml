@{
    ViewBag.Title = "Administrator Dashboard";
}

<h2>Administrator Dashboard</h2>

@if (TempData["Success"] != null)
{
    <p style="color: green;"><strong>Success:</strong> @TempData["Success"]</p>
}

@if (TempData["Error"] != null)
{
    <p style="color: red;"><strong>Error:</strong> @TempData["Error"]</p>
}

<h3>User Statistics</h3>
<ul>
    <li>Total Users: <strong>@((int)ViewBag.TotalUsers)</strong></li>
    <li>Tourists: <strong>@((int)ViewBag.TotalTourists)</strong></li>
    <li>Managers: <strong>@((int)ViewBag.TotalManagers)</strong></li>
    <li>Administrators: <strong>@((int)ViewBag.TotalAdmins)</strong></li>
</ul>

<h3>Quick Actions</h3>
<p>
    @Html.ActionLink("View All Users", "ViewAllUsers") |
    @Html.ActionLink("Register Manager", "RegisterManager")
</p>

<h3>System Information</h3>
<p><strong>Current Date:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>System Status:</strong> Online</p>
<p><strong>Your Role:</strong> Administrator</p>
<p><strong>Logged in as:</strong> @((Session["CurrentUser"] as Veb_Projekat.Models.SessionUser)?.Username)</p>
<p><strong>Note:</strong> Administrator accounts are loaded from file and cannot be modified through the system.</p>